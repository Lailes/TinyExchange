@using Microsoft.AspNetCore.Mvc.TagHelpers
@using TinyExchange.RazorPages.Database.Managers.Amount
@model TinyExchange.RazorPages.Pages.ProfilePages.FondsManagerProfile

@inject IAmountManager AmountManager

@{
    if (Model.UserForView == null)
        throw new ArgumentNullException(nameof(Model.UserForView));
    
    if (Model.ViewerUser == null)
        throw new ArgumentNullException(nameof(Model.ViewerUser));
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<link rel="stylesheet" asp-href-include="/css/profile.css"/>
<link rel="stylesheet" asp-href-include="/css/modal.css"/>

<div class="modal fade" id="addFondsModal" tabindex="-1" aria-labelledby="addFondsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered small-padding">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addFondsModalLabel">Add Amount For User</h5>
            </div>
            <form method="post" asp-page-handler="AddFonds">
                <input type="hidden" name="userId" value="@Model.UserForView.Id"/>
                <input type="hidden" name="fondsManagerId" value="@Model.ViewerUser.Id"/>
                <input class="form-control form-text" type="number" name="amount" value="0" required />
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Apply Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div>
    @if (Model.UserBlock != null)
    {
        <div class="text-center">
            <h4 class="h4">User is Banned</h4>
            <h6 class="h6">Reason: @Model.UserBlock.Reason</h6>
            <h5 class="h5">Banned Until: @Model.UserBlock.ReleaseTime.ToString("f")</h5>
        </div>
    }
    else
    {
        
        <div>
            <h5 class="h5 text-center">
                Total Amount: @((await AmountManager.GetAmountInfoForUser(Model.UserForView.Id)).Amount)
            </h5>
        </div>

        <div>
            <button  class="btn btn-secondary" type="button" data-toggle="modal" data-target="#addFondsModal">Add Fonds</button>
        </div>
    }
</div>